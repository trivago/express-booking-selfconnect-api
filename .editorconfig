# editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
tab_width = 4
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.{sass,scss}]
indent_size = 2

[*.{yml,json}]
indent_size = 2

[composer.json]
indent_size = 4

[Makefile]
indent_style = tab