{
  "title": "Party Object",
  "type": "object",
  "$schema": "http://json-schema.org/schema#",
  "description": "Schema of party object.",
  "required": [
    "adults"
  ],
  "properties": {
    "adults": {
      "description": "The number of adults staying in the room.",
      "type": "integer",
      "example": 2
    },
    "children": {
      "description": "The ages of any children staying in the room.",
      "type": "array",
      "items": {
        "type": "integer"
      },
      "example": [
        1
      ]
    }
  }
}