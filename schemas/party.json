{
  "description": "Schema of party object.", 
  "title": "Party Object", 
  "required": [
    "adults"
  ], 
  "$schema": "http://json-schema.org/schema#", 
  "type": "object", 
  "properties": {
    "adults": {
      "type": "integer", 
      "description": "The number of adults staying in the room.", 
      "example": 2
    }, 
    "children": {
      "items": {
        "type": "integer"
      }, 
      "type": "array", 
      "description": "The ages of any children staying in the room.", 
      "example": [
        1
      ]
    }
  }
}