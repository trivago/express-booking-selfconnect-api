{
  "description": "Schema for the price", 
  "title": "Price Object", 
  "required": [
    "amount", 
    "currency"
  ], 
  "example": {
    "currency": "USD", 
    "amount": 80
  }, 
  "$schema": "http://json-schema.org/schema#", 
  "type": "object", 
  "properties": {
    "currency": {
      "type": "string", 
      "description": "ISO 4217 currency code for the price."
    }, 
    "amount": {
      "type": "number", 
      "description": "The value of the price.", 
      "format": "float"
    }
  }
}