{
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "description": "Schema for the price",
  "properties": {
    "amount": {
      "format": "float",
      "type": "number",
      "description": "The value of the price."
    },
    "currency": {
      "type": "string",
      "description": "ISO 4217 currency code for the price."
    }
  },
  "title": "Price Object",
  "example": {
    "amount": 80,
    "currency": "USD"
  },
  "required": [
    "amount",
    "currency"
  ]
}