{
  "title": "Discount object",
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "anyOf": [
    {
      "required": [
        "percentage"
      ]
    },
    {
      "required": [
        "total"
      ]
    }
  ],
  "description": "Schema of a discount object.",
  "properties": {
    "percentage": {
      "type": "number",
      "description": "Percentage value of the discount. Mandatory, only if total is not provided.",
      "format": "float"
    },
    "total": {
      "$ref": "price.json"
    }
  }
}