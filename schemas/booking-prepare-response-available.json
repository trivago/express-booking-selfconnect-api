{
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "description": "Schema of a booking preparation.",
  "properties": {
    "room_type": {
      "$ref": "room-type.json"
    },
    "customer_support": {
      "$ref": "customer-support.json"
    },
    "partner_reference": {
      "example": "1",
      "type": "string",
      "description": "Advertiser's unique hotel id."
    },
    "checkin_date": {
      "format": "date",
      "example": "2019-01-01",
      "type": "string",
      "description": "The user's check-in date in YYYY-MM-DD."
    },
    "checkout_date": {
      "format": "date",
      "example": "2019-01-02",
      "type": "string",
      "description": "The user's check-out date in YYYY-MM-DD."
    },
    "status": {
      "example": "AVAILABLE",
      "enum": [
        "ADJUSTED",
        "AVAILABLE",
        "SOLD_OUT"
      ]
    }
  },
  "title": "Booking Prepare Available",
  "required": [
    "status",
    "checkin_date",
    "checkout_date",
    "partner_reference",
    "room_type",
    "customer_support"
  ]
}